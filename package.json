{
  "name": "anonymous-property-voting-v2",
  "version": "2.0.0",
  "description": "Anonymous Property Voting System with fhEVM v0.6.0",
  "main": "index.js",
  "scripts": {
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:v2": "hardhat run scripts/deployVotingV2.js --network sepolia",
    "deploy:pauser": "hardhat run scripts/deployPauserSet.js --network sepolia",
    "deploy:gateway": "hardhat run scripts/deployGateway.js --network sepolia",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "test:performance": "hardhat test test/performance.test.js",
    "test:security": "npm run lint:check && npm audit",
    "test:all": "npm run test && npm run test:performance",
    "test:quick": "hardhat test --bail",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "clean": "hardhat clean",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:check": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "npm audit --audit-level=moderate",
    "security:slither": "slither . --config-file slither.config.json",
    "security:secrets": "eslint --no-eslintrc --plugin no-secrets --rule 'no-secrets/no-secrets: error' .",
    "performance:benchmark": "REPORT_GAS=true hardhat test test/performance.test.js --grep 'Gas Efficiency'",
    "performance:load": "hardhat test test/performance.test.js --grep 'Load Testing'",
    "performance:all": "hardhat test test/performance.test.js",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "build": "vite build",
    "build:production": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "prepare": "husky install husky",
    "ci": "npm run lint:check && npm run compile && npm run test && npm run test:performance"
  },
  "keywords": [
    "fhEVM",
    "voting",
    "privacy",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-security": "^2.1.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^8.0.3",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.1",
    "solidity-coverage": "^0.8.16",
    "terser": "^5.26.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.8.0",
    "@zama-fhe/oracle-solidity": "^0.2.0",
    "ethers": "^5.7.2"
  }
}
